<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view1"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_de"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_kota"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/nama_kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:text="Nama Kota"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv_kota"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@id/nama_kota"
            app:layout_constraintStart_toEndOf="@+id/iv_kota"/>

        <TextView
            android:id="@+id/waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lama"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/biaya"
            app:layout_constraintStart_toEndOf="@id/iv_kota"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>